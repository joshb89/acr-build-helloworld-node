{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "containerName": {
      "type": "string"
    },
    "imageName": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    // "storageAccountName1": {
    //   "type": "string"
    // },
    // "storageAccountKey1": {
    //   "type": "securestring"
    // },
    // "fileShareName1": {
    //   "type": "string"
    // },
    // "fileShareName2": {
    //   "type": "string"
    // }
  },
  "resources": [
    {
      "type": "Microsoft.ContainerInstance/containerGroups",
      "apiVersion": "2021-09-01",
      "name": "[parameters('containerName')]",
      "location": "[parameters('location')]",
      "properties": {
        "containers": [
          {
            "name": "[parameters('containerName')]",
            "properties": {
              "image": "[parameters('imageName')]",
              "resources": {
                "requests": {
                  "cpu": 4,
                  "memoryInGb": 8
                }
              },
              "ports": [
                {
                  "port": 9091
                }
              ],
              "volumeMounts": [
                {
                  "name": "volume1",
                  "mountPath": "/faw/logs/RemoteAgent/"
                },
                {
                  "name": "volume2",
                  "mountPath": "/faw/software/remoteagent/config/"
                }
              ]
            }
          }
        ],
        "osType": "Linux",
        "ipAddress": {
          "type": "Public",
          "ports": [
            {
              "protocol": "tcp",
              "port": 9091
            }
          ]
        },
                "volumes": [
                    {
                        "name": "fileshareconfig",
                        "azureFile": {
                            "shareName": "config",
                            "readOnly": false,
                            "storageAccountName": "stisfawcontainerdev"
                        }
                    },
                    {
                        "name": "fileshareremoteagent",
                        "azureFile": {
                            "shareName": "remoteagent",
                            "readOnly": false,
                            "storageAccountName": "stisfawcontainerdev"
                        }
                    }
                ]
      }
    }
  ]
}